procedure TForm1.BitBtn1Click(Sender: TObject);
begin
   //DataModule2.ADOTable1.IndexName:='.....';
end;

procedure TForm1.Button1Click(Sender: TObject);
begin
  Form4.ShowModal();
end;

procedure TForm1.Button2Click(Sender: TObject);
begin
if not Data.DataModule2.ADOTable1.Locate(Combobox1.Text, Edit2.Text, [loCaseInsensitive,
    loPartialKey]) then
    ShowMessage('Запись не найдена');

end;



procedure TForm1.Button3Click(Sender: TObject);
begin
    if Length(Edit3.Text) > 0 then
      begin
      Data.DataModule2.ADOTable1.Filtered:=false;
      Data.DataModule2.ADOTable1.Filter:=Combobox2.Text + ' LIKE ' + QuotedStr(Edit3.Text+ '%');
      Data.DataModule2.ADOTable1.Filtered:=true;
      Button4.Enabled:=true;
      end
    else Data.DataModule2.ADOTable1.Filtered:=false;
end;

procedure TForm1.Button4Click(Sender: TObject);
begin
    Data.DataModule2.ADOTable1.Filtered:=false;
    Button4.Enabled:=false;
end;

procedure TForm1.FormCreate(Sender: TObject);
begin
  // Open DB Tables

  //Data.DataModule2.ADOConnection1.Connected:=true;

//  DataModule2.ADOTable1.Active:=True;
//  DataModule2.ADOTable2.Active:=True;
//  DataModule2.ADOTable3.Active:=True;

end;

procedure TForm1.FormPaint(Sender: TObject);
begin
    Data.DataModule2.ADOConnection1.Connected:=true;

      DataModule2.ADOTable1.Active:=True;
      DataModule2.ADOTable2.Active:=True;
      DataModule2.ADOTable3.Active:=True;
end;

procedure TForm1.N7Click(Sender: TObject);
begin
 Form2.Show;
end;

